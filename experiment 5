#include <stdio.h> 
int main() { 
printf("NAME=PRIYANSHU \nSAPID=590028007 
\nCOURSE=BCA\nBATCH=5"); 
printf("\n___________\n"); 
int num; 
int positive = 0, negative = 0, zero = 0; 
char choice; 
do { 
printf("Enter a number: "); 
scanf("%d", &num); 
if (num > 0) 
positive++; 
else if (num < 0) 
negative++; 
else 
zero++; 
printf("Do you want to enter another number? (y/n): "); 
scanf(" %c", &choice); // notice the space before %c to 
skip newline 
} while (choice == 'y' || choice == 'Y'); 
printf("\nCount of Positive Numbers: %d", positive); 
printf("\nCount of Negative Numbers: %d", negative); 
printf("\nCount of Zeroes: %d\n", zero); 
return 0; 
} 
